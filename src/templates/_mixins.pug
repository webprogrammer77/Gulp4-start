mixin nav (className, items, activeItem)
    nav.nav(class=`${className}-nav` id=`nav-${className}`)
        ul(class=`${className}-nav__list`)
            each href, title in items
                if (title == activeItem) 
                    li(class=`${className}-nav__item`)
                        a(class=`${className}-nav__link active` href=href)
                            span= title
                else
                    li(class=`${className}-nav__item`)
                        a(class=`${className}-nav__link` href=href)
                            span(class=`${className}-nav__link-text`)= title
                            
mixin select (className, options, selectedOption)
    select(class=`${className}`)
        each option in options
            if option === selectedOption
                option(value=`${option}` selected)= option
            else
                option(value=`${option}`)= option	           

